# Production Environment Variables for Django Grant Management System
# Copy this file to .env in production and update with actual values

# Security
SECRET_KEY=your-super-secret-production-key-here-make-it-very-long-and-random
DEBUG=False

# Domain and Server
DOMAIN_NAME=davidjohnsonfoundation.org
SERVER_IP=YOUR_SERVER_IP_ADDRESS

# Database Configuration (PostgreSQL)
DB_NAME=djf_grants_prod
DB_USER=djf_user
DB_PASSWORD=your-secure-database-password
DB_HOST=localhost
DB_PORT=5432

# Email Configuration (SMTP)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@davidjohnsonfoundation.org

# Cache Configuration (Redis)
REDIS_URL=redis://127.0.0.1:6379/1

# AWS S3 Configuration (Optional - for static/media files)
USE_S3=False
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=djf-static-files
AWS_S3_REGION_NAME=us-east-1

# Admin Security
ADMIN_URL=secure-admin-panel/

# Backup Configuration
BACKUP_STORAGE_PATH=/var/backups/djf/

# Error Reporting (Sentry - Optional)
SENTRY_DSN=your-sentry-dsn-url-here

# Additional Security
ADMIN_MAX_LOGIN_ATTEMPTS=5
ADMIN_SESSION_TIMEOUT=3600

# Performance Settings
CONN_MAX_AGE=600

# Site Information
SITE_NAME=David Johnson Foundation
SITE_DESCRIPTION=Grant management system for the David Johnson Foundation