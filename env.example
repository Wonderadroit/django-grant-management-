# Environment Variables for Django Grant Management System
# Copy this file to .env and fill in your values for local development

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# Database Configuration (for local development - use SQLite)
# DATABASE_URL will be automatically set by Render for production
# DATABASE_URL=postgres://user:password@localhost:5432/dbname

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=Dave Johnson Foundation <grantdavejohnsonfoundation@gmail.com>

# Production Settings (Set these in Render dashboard)
# RENDER_EXTERNAL_URL=https://your-app-name.onrender.com
# WEB_CONCURRENCY=4