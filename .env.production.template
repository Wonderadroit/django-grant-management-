# Production Settings for David Johnson Foundation Grant System
# Copy this to .env for production deployment

# SECURITY WARNING: Generate a new secret key for production!
SECRET_KEY=your-super-secret-production-key-change-this-immediately

# SECURITY WARNING: Set to False in production!
DEBUG=False

# Production domains (comma-separated)
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Database Configuration (PostgreSQL recommended for production)
DATABASE_URL=postgres://username:password@localhost:5432/djf_grants

# Email Configuration (Production SMTP)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@davidjohnsonfoundation.org
EMAIL_HOST_PASSWORD=your-app-specific-password
DEFAULT_FROM_EMAIL=noreply@davidjohnsonfoundation.org

# Static Files (for production with S3 or CDN)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=djf-static-files
# AWS_S3_REGION_NAME=us-east-1

# Admin Security
ADMIN_URL=secure-admin-panel/

# Site Information
SITE_NAME=David Johnson Foundation
SITE_DESCRIPTION=Grant management system for the David Johnson Foundation

# Performance Settings
CONN_MAX_AGE=600

# Security Headers (recommended for production)
SECURE_SSL_REDIRECT=True
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True
X_FRAME_OPTIONS=DENY