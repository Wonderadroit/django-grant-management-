# Docker Environment Variables for Production
# Copy this file to .env.docker and update with actual values

# Database
DB_PASSWORD=your-secure-database-password-here

# Redis
REDIS_PASSWORD=your-secure-redis-password-here

# Django
SECRET_KEY=your-super-secret-production-key-here-make-it-very-long-and-random

# Email
EMAIL_HOST=smtp.gmail.com
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-specific-password

# Domain
DOMAIN_NAME=davidjohnsonfoundation.org

# SSL (for Let's Encrypt)
LETSENCRYPT_EMAIL=admin@davidjohnsonfoundation.org

# Backup (optional)
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM

# Monitoring (optional)
ENABLE_MONITORING=false